if MAINTAINER_MODE
DBG_FLAGS = -g -Werror
else
DBG_FLAGS = -O2
endif

AM_CPPFLAGS = $(DBG_FLAGS) -Wall -D@PROCESSOR_DEFINE@ -D@PLATFORM_DEFINE@ \
	      -D__OSVERSION__=@OSVERSION@ -D_REENTRANT -I$(top_srcdir)/include \
	      $(CXXFLAGS_OMNIORB) $(CXXFLAGS_FAST)

