DIET_HOME = @PREFIX@
include $(DIET_HOME)/include/Makefile.inc

BLASLIBS  = -lm -lblas -lm -lg2c

all:	client server

client:	client.o
	$(CC) $< $(CCFLAGS) $(DIET_CLIENT_LIBS) -o $@

client.o: client.c
	$(CC) -c $< $(CCFLAGS) -o $@

server:	server.o
	$(CC) $< $(CCFLAGS) $(DIET_SERVER_LIBS) $(BLASLIBS) -o $@

server.o: server.c
	$(CC) -c $< $(CCFLAGS) -o $@

clean:
	rm -f *.o client server
