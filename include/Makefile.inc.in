# DIET variables

DIET_HOME  = @prefix@
DIET_FLAGS = -L$(DIET_HOME)/lib -I$(DIET_HOME)/include
CLIENT_LIB = -lDIET_client
SED_LIB    = -lDIET_SeD


# omniORB variables

OMNIORB_V   = @OMNIORB_VERSION@
OMNIORBLIBS = @LIBS_omniORB@ -lpthread 
ifeq ($(OMNIORB_V), 3)
  OMNIORBLIBS += -ltcpwrapGK
endif


# Generic variables
CC	= @CC@
CCFLAGS	+= -O2 -Wall -Wno-unused -D@ARCH_DIET@ -D@OS_DIET@ -D__OSVERSION__=2 \
        $(DIET_FLAGS) @CCFLAGS_omniORB@ \
        -I@OMNIORB_HOME@/include/omniORB@OMNIORB_VERSION@

CXX      = @CXX@
CXXFLAGS += -O2 -Wall -Wno-unused -D@ARCH_DIET@ -D@OS_DIET@ -D__OSVERSION__=2 \
          -D_REENTRANT $(DIET_FLAGS) @CXXFLAGS_omniORB@ \
          -I@OMNIORB_HOME@/include/omniORB@OMNIORB_VERSION@

#LIBS_DIET_USED = @LIBS_omniORB@ @LIBS_FAST@
DIET_SERVER_LIBS = $(SED_LIB) @LIBS_omniORB@
DIET_CLIENT_LIBS = $(CLIENT_LIB) @LIBS_omniORB@
