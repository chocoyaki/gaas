# DIET variables

DIET_HOME  = @prefix@
DIET_FLAGS = -I$(DIET_HOME)/include
CLIENT_LIB = -L$(DIET_HOME)/lib -lDIET_client
SED_LIB    = -L$(DIET_HOME)/lib -lDIET_SeD

# Generic variables
CC	= @CC@
CCFLAGS	+= -O2 -Wall @CFLAG_NO_STRICT_ALIASING@ $(DIET_FLAGS)

CXX      = @CXX@
CXXFLAGS += -O2 -Wall @CXXFLAG_NO_STRICT_ALIASING@ $(DIET_FLAGS)

DIET_SERVER_LIBS = $(SED_LIB) @LIBS_OMNIORB@ @LIBS_FAST@
DIET_CLIENT_LIBS = $(CLIENT_LIB) @LIBS_OMNIORB@
