# DIET variables

DIET_HOME  = @prefix@
DIET_FLAGS = -L$(DIET_HOME)/lib -I$(DIET_HOME)/include
CLIENT_LIB = -lDIET_client
SED_LIB    = -lDIET_SeD

# Generic variables
CC	= @CC@
CCFLAGS	+= -O2 -Wall @CFLAGS_GCC_3_3@ -D@ARCH_DIET@ -D@OS_DIET@ \
           -D__OSVERSION__=2 $(DIET_FLAGS) @CCFLAGS_FAST@ @CCFLAGS_OMNIORB@ \
           -I@OMNIORB_HOME@/include/omniORB@OMNIORB_VERSION@

CXX      = @CXX@
CXXFLAGS += -O2 -Wall @CFLAGS_GCC_3_3@ -D@ARCH_DIET@ -D@OS_DIET@ \
            -D__OSVERSION__=2 -D_REENTRANT $(DIET_FLAGS) @CXXFLAGS_FAST@ \
            @CXXFLAGS_OMNIORB@ -I@OMNIORB_HOME@/include/omniORB@OMNIORB_VERSION@

DIET_SERVER_LIBS = $(SED_LIB) @LIBS_OMNIORB@ @LIBS_FAST@
DIET_CLIENT_LIBS = $(CLIENT_LIB) @LIBS_OMNIORB@
